{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "mojimatch2",
  "version": "1.0.0",
  "permissions": ["redis"],
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html",
        "title": "ðŸŽ® MojiMatcher - Find the Match!",
        "description": "A fast-paced emoji matching game. Find the one emoji that appears on both cards before time runs out!"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "menu": {
    "items": [
      {
        "label": "Create MojiMatcher Post",
        "description": "Create a new MojiMatcher game post",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "mojimatch2_dev"
  }
}
